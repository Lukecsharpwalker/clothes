@model Ubrania_ASP.NET_Nowy.Models.Cloth

@{
    ViewData["Title"] = "Create_Cloth";
}
<br />

<h2>Tworzenie nowego Ubrania</h2>

<hr />
<form asp-action="Create_Cloth">
    <div class="form-border">
        <h4>Nowe Ubranie</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Marka</label>
            </div>
            <div class="col-4">
                <input asp-for="Mark" class="form-control" />
            </div>
            <span asp-validation-for="Mark" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Rozmiar</label>
            </div>
            <div class="col-4">
                <input asp-for="Size" class="form-control" />
            </div>
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Kolor</label>
            </div>
            <div class="col-4">
                <input asp-for="Colour" class="form-control" />
            </div>
            <span asp-validation-for="Colour" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Type</label>
            </div>
            <div class="col-4">
                <input asp-for="Type" class="form-control" />
            </div>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Opis</label>
            </div>
            <div class="col-4">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Cena</label>
            </div>
            <div class="col-4">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>       
        <div class="form-group">
            <input type="submit" value="Stworz" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-dark">Wróć do listy</a>
        </div>


    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

