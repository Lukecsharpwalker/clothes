@model Ubrania_ASP.NET_Nowy.Models.Agreement

@{
    ViewData["Title"] = "Delete";
}
<br />
<h2>Usuń Umowę</h2>
<br />

<h4>Umowa nr: @Html.DisplayFor(Model => Model.Id)</h4>
<hr />

<div class="form-border">

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label class="control-label">Imię</label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label class="control-label">Nazwisko</label>
                </div>
                <div class="col-4">
                    <input asp-for="Surname" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Tel" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Tel" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Pesel" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Pesel" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label class="control-label">Początek Umowy</label>
                </div>
                <div class="col-4">
                    <input asp-for="Begin" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label class="control-label">Koniec</label>
                </div>
                <div class="col-4">
                    <input asp-for="End" class="form-control" />
                </div>

            </div>
        </fieldset>
        <div class="form-group">
            <input type="submit" value="Usun" class="btn btn-danger" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Wróć do listy Umów Otwartych</a>
            <a asp-action="Closed_Agreements" class="btn btn-success">Wróć do listy Umów Zamkniętych</a>
        </div>

    </form>
</div>
