@model Ubrania_ASP.NET_Nowy.Models.Agreement

@{
    ViewData["Title"] = "Details";
}
<br />
<h2>Szczegóły</h2>
<br />
<div class="form-border">
    <h4>Umowa nr: @Html.DisplayFor(Model => Model.Id)</h4>
    <hr />
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label">Numer ID</label>
            </div>
            <div class="col-4">
                <input asp-for="Id" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label">Imię</label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label">Nazwisko</label>
            </div>
            <div class="col-4">
                <input asp-for="Surname" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Tel" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Tel" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label">Początek Umowy</label>
            </div>
            <div class="col-4">
                <input asp-for="Begin" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="custom-label">Koniec Umowy</label>
            </div>
            <div class="col-4">
                <input asp-for="End" class="form-control" />
            </div>
        </div>

    </fieldset>







    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a> |
        <a asp-action="Index" class="btn btn-success">Powrót</a>
    </div>
</div>



