@model Ubrania_ASP.NET_Nowy.Models.Cloth

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edycja Ubrania</h2>
<br />



<hr />

<form asp-action="Edit">
    <h3>Edytuj ubranie należące do: @Html.DisplayFor(Model => Model.Agreement.Name)  @Html.DisplayFor(Model => Model.Agreement.Surname)</h3>
    <div class="form-border">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Marka</label>
            </div>
            <div class="col-4">
                <input asp-for="Mark" class="form-control" />
            </div>
            <span asp-validation-for="Mark" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Rozmiar</label>
            </div>
            <div class="col-4">
                <input asp-for="Size" class="form-control" />
            </div>
            <span asp-validation-for="Size" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Kolor</label>
            </div>
            <div class="col-4">
                <input asp-for="Colour" class="form-control" />
            </div>
            <span asp-validation-for="Colour" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Typ</label>
            </div>
            <div class="col-4">
                <input asp-for="Type" class="form-control" />
            </div>
            <span asp-validation-for="Type" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Opis</label>
            </div>
            <div class="col-4">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Cena</label>
            </div>
            <div class="col-4">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Cena Sprzedaży</label>
            </div>
            <div class="col-4">
                <input asp-for="Price_RL" class="form-control" />
            </div>
            <span asp-validation-for="Price_RL" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Numer Umowy</label>
            </div>
            <div class="col-4">
                <input asp-for="Agreement_Id" class="form-control" />
            </div>
            <span asp-validation-for="Agreement_Id" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="control-label">Sprzedane?</label>
            </div>
            <div class="col-4">
                <input asp-for="Sold" class="form-control" />
            </div>
            <span asp-validation-for="Sold" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Zmień" class="btn btn-primary" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Wróć do listy Ubrań</a>
        </div>


    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

