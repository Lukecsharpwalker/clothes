@model IEnumerable<Ubrania_ASP.NET_Nowy.Models.NamesOfProperty>
@using Ubrania_ASP.NET_Nowy.Models
@{
    ViewData["Title"] = "Index";

}
<br />

<div class="row">
    <div class="col-4" style="border-right-style:double; border-left-style:double">
        <h2>KOLORY</h2>
        <br />
        @foreach (var item in Model)
        {
            @foreach (var x in item.Colors)
            {
                @x.NameOf
                <br />
            }
        }
        <hr />
    </div>

    <div class="col-4" style="border-right-style:double">
        <h2>ROZMIARY</h2>
        <br />
        @foreach (var item in Model)
        {
            @foreach (var x in item.Sizes)
            {
                @x.NameOf
                <br />
            }
        }
        <hr />
    </div>

    <div class="col-4" style="border-right-style:double">
        <h2>MARKI</h2>
        <br />
        @foreach (var item in Model)
        {
            @foreach (var x in item.Marks)
            {
                @x.NameOf
                <br />
            }

        }
   <hr /> </div>
</div>

<div class="row">
    <div class="col-4" style="border-right-style:double; border-left-style:double"> @await Html.PartialAsync("_CreateColour", new Colour())</div>
    <div class="col-4" style="border-right-style:double"> @await Html.PartialAsync("_CreateSize", new Size())</div> 
    <div class="col-4" style="border-right-style:double">  @await Html.PartialAsync("_CreateMark", new Mark())</div>      
    </div>
